@model EditTradeModel
@{
    ViewData["Title"] = "Edit";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit Trade</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="card-body">

                        <form asp-controller="TradeCode" asp-action="edittrade" method="post" enctype="multipart/form-data">
                            <div class="card-body">


                                <div class="form-group">
                                    <label for="trade_code">Trade</label>
                                    <input type="text" class="form-control" asp-for="trade_code" placeholder="Enter Description">
                                </div>

                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <a class="btn btn-primary" asp-area="" asp-controller="TradeCode" asp-action="Index">Cancel</a>
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <input type="hidden" asp-for="Id" />
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>